{
  "name": "testdriver-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for TestDriver AI - enables AI agents to build tests iteratively",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "npm run build:ui && npm run build:server",
    "build:server": "tsc",
    "build:ui": "cross-env INPUT=mcp-app.html vite build",
    "dev": "tsx watch src/server.ts",
    "serve": "tsx src/server.ts",
    "start": "node dist/server.js"
  },
  "dependencies": {
    "@modelcontextprotocol/ext-apps": "^1.0.0",
    "@modelcontextprotocol/sdk": "^1.24.0",
    "@sentry/node": "^9.0.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "cross-env": "^7.0.3",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "vite": "^6.0.0",
    "vite-plugin-singlefile": "^2.3.0"
  }
}
