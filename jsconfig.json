{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "checkJs": true,
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "typeRoots": ["."]
  },
  "include": [
    "**/*.js",
    "**/*.mjs",
    "**/*.d.ts",
    "sdk.d.ts",
    "lib/**/*.d.ts",
    "interfaces/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}
