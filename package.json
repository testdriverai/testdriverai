{
  "name": "testdriverai",
  "version": "6.1.11",
  "description": "Next generation autonomous AI agent for end-to-end testing of web & desktop",
  "main": "index.js",
  "bin": {
    "testdriverai": "bin/testdriverai.js"
  },
  "scripts": {
    "start": "node bin/testdriverai.js",
    "dev": "DEV=true node bin/testdriverai.js",
    "debug": "DEV=true VERBOSE=true node bin/testdriverai.js",
    "docs": "node docs/_scripts/link-replacer.js && cd docs && npx mint@latest dev",
    "docs:dev": "cd docs && npx mint dev",
    "docs:build": "node docs/_scripts/link-replacer.js && cd docs && npx mint@latest build",
    "docs:links": "node docs/_scripts/link-replacer.js",
    "bundle": "node build.mjs",
    "test": "mocha test/*",
    "docs-lint": "cd docs && vale **/*.mdx",
    "docs-upload": "node upload-docs-to-openai.js",
    "runall": "dotenv testdriverai run --config testdriver.config.yaml --path './testdriver/*.testdriver.yaml'",
    "test-assert": "node index.js run --path=testdriver/acceptance/assert.yaml",
    "generate-report": "junit-viewer --results=out.xml --save=report.html",
    "serve-report": "npx http-server . -p 8080 -o report.html",
    "report": "npm run generate-report && npm run serve-report"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@npmcli/redact": "^3.2.2",
    "@oclif/core": "^4.5.0",
    "@oclif/plugin-commands": "^4.1.28",
    "@oclif/plugin-help": "^6.2.30",
    "@oclif/plugin-not-found": "^3.2.59",
    "@oclif/plugin-warn-if-update-available": "^3.1.43",
    "@stoplight/yaml-ast-parser": "^0.0.50",
    "ajv": "^8.17.1",
    "arktype": "^2.1.19",
    "axios": "^1.7.7",
    "chalk": "^4.1.2",
    "cli-progress": "^3.12.0",
    "diff": "^8.0.2",
    "dotenv": "^16.4.5",
    "eventemitter2": "^6.4.9",
    "jimp": "^0.22.12",
    "js-yaml": "^4.1.0",
    "junit-report-builder": "^5.1.1",
    "markdown-parser": "0.0.8",
    "marked": "^12.0.1",
    "marked-terminal": "^7.0.0",
    "marky": "^1.2.5",
    "open": "^10.1.2",
    "pixelmatch": "^7.1.0",
    "remark-parse": "^11.0.0",
    "sanitize-filename": "^1.6.3",
    "strip-ansi": "^6.0.1",
    "tmp": "^0.2.3",
    "winston": "^3.13.0",
    "winston-transport": "^4.9.0",
    "ws": "^8.18.1"
  },
  "overrides": {
    "glob": "^11.0.1",
    "rimraf": "^5.0.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.10.0",
    "chai": "^5.1.2",
    "esbuild": "0.20.2",
    "esbuild-plugin-fileloc": "^0.0.6",
    "eslint": "^9.10.0",
    "globals": "^15.9.0",
    "http-server": "^14.1.1",
    "junit-viewer": "^4.11.1",
    "mint": "^4.2.67",
    "mocha": "^10.8.2",
    "node-addon-api": "^8.0.0",
    "prettier": "3.3.3"
  },
  "optionalDependencies": {
    "@esbuild/linux-x64": "^0.21.5"
  },
  "oclif": {
    "bin": "testdriverai",
    "dirname": "testdriverai",
    "commands": "./interfaces/cli/commands",
    "plugins": [
      "@oclif/plugin-*"
    ],
    "topicSeparator": " ",
    "default": "edit"
  }
}
